<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginBottom="5dp"
    android:background="@color/white"
    android:orientation="horizontal">

    <com.joanzapata.iconify.widget.IconTextView
        android:id="@+id/cart_item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:text="{fa-check-circle}"
        android:textColor="@android:color/darker_gray" />
    <!--商品图片-->
    <LinearLayout
        android:id="@+id/sort_item_good"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        >
        <ImageView
            android:id="@+id/cart_item_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />
        <!--商品描述-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">
            <!--商品标题-->
            <TextView
                android:id="@+id/cart_item_good_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="商品标题" />
            <!--商品标题-->
            <TextView
                android:id="@+id/cart_item_good_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="商品描述" />
            <!--商品价格-->
            <TextView
                android:id="@+id/cart_item_good_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="￥6.00"
                android:textColor="@color/title_color" />
        </LinearLayout>
    </LinearLayout>
    <!--增加商品-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="10dp"
        android:gravity="center"
        >
        <!--减少-->
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/cart_item_minus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="{fa-minus-square-o}"
            android:textSize="24sp"
            />
        <!--数量-->
        <TextView
            android:id="@+id/cart_goods_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="1"
            android:layout_marginRight="3dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textColor="@color/title_color"
            />
        <!--减少-->
        <com.joanzapata.iconify.widget.IconTextView
            android:id="@+id/cart_item_plus"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:gravity="center"
            android:text="{fa-plus-square-o}"
            android:textSize="24sp"
            />
    </LinearLayout>
</LinearLayout>